# Fichier d'environnement pour Docker
# Renommez ce fichier en .env et remplissez les valeurs

# Clé secrète de Django (doit être une chaîne longue et aléatoire)
SECRET_KEY='votre-super-cle-secrete-a-remplacer'

# Mode débogage (mettre à False en production)
DEBUG=True

# Base de données MySQL
MYSQL_DATABASE=delais_docker
MYSQL_USER=user_docker
MYSQL_PASSWORD=password_docker
MYSQL_ROOT_PASSWORD=root_password_docker

# Hôtes autorisés (séparés par une virgule, ex: localhost,127.0.0.1,votre-domaine.com)
ALLOWED_HOSTS=localhost,127.0.0.1
